<%-include('header')%>

  <body>
    <%-include('headsection')%>
      <style>
        .success-message {
          display: flex;
          justify-content: center;
        }

        .success-message i {
          margin-right: 5px;
          margin-top: 1px;
          font-size: 2rem;
        }

        .success-content {
          color: purple;
          font-weight: 400;
          font-size: 1.8rem;
          line-height: 1.5;
          letter-spacing: -.025em;
          padding-top: 16rem;
          background-size: cover;
          background-position: center center;
          background-repeat: no-repeat;
          min-height: 480px;
          background-color: #fdfdfd;
        }
      </style>

      <main class="main">
        <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">

        </nav><!-- End .breadcrumb-nav -->

        <div class="error-content success-content text-center" style="background-image: url(/images/ordersuccess.jpg)">
          <div class="container">
            <h1 class="error-title">THANK YOU!</h1>

            <div class="success-message">
              <i class="fa-solid fa-house"></i>
              <h1 class="error-title" style="font-size: 2rem;">YOUR ORDER IS CONFIRMED</h1>
            </div><!-- End .success-message -->

            <p>We are getting started on your order right away<br>and you will receive a confirmation email shortly to
              <strong>
                <%=locals.useremail %>
              </strong>.</p>

            <a href="/myOrders" class="btn btn-outline-primary-2 btn-minwidth-md">
              <span>VIEW ORDER DETAILS</span>
              <i class="icon-long-arrow-right"></i>
            </a>
          </div><!-- End .container -->
        </div><!-- End .error-content text-center -->
      </main><!-- End .main -->

      <%-include('footer')%>