<%-include('header')%>
<body>
    <style>

.ec-login-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 70vh; /* This ensures the container takes up the full viewport height */
}
        
   

.ec-login-box {
    background-color: #fff;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}



.ec-login-box label {
    font-weight: bold;
}

.ec-login-box input[type="email"],
.ec-login-box input[type="password"] {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.ec-login-box button {
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

/* Add any other styles you need */


    </style>
    <%-include('headsection')%>
    <!-- Ec login page -->
    <section class="ec-page-content section-space-p">
      <div class="container">
          <div class="row">
              <div class="col-md-12 text-center">
                  <div class="section-title">
                      
                  
                  </div>
              </div>
              <div class="ec-login-wrapper">
                
                  <div class="ec-login-container">
                    <div class="ec-login-box">
                      <div class="ec-login-form">
                       
                          <form id="loginForm">
                            <h2 class="ec-bg-title text-center">Log In </h2>
                              <span class="ec-login-wrap">
                                  <label>Email Address*</label>
                                  <input type="email" name="email" placeholder="Enter your email address " required  />
                                  <p id="emailError" class="p-1 text-danger"></p>
                                </span>
                              <span class="ec-login-wrap">
                                  <label>Password*</label>
                                  <input type="password" name="password" placeholder="Enter your password" />
                                  <p id="passwordError" class="p-1 text-danger"></p>
                              </span>
                              <span class="ec-login-wrap ec-login-fp">
                                  <label><a href="/forgotPassword">Forgot Password?</a></label>
                              </span>
                           
                           
                              <h3 id="accountBlock" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;" class="text-danger text-decoration"></h3>
                            
                              <span class="ec-login-wrap ec-login-btn">
                                  <button class="btn btn-primary" type="submit" id="submit">submit</button>
                               
                              </span>
                             <br>
                        <div class="member">
                          Note a member?
                          <a class="btn btn-primary " href="/register">Signup Now!!</a>
                      </div>
                          </form>
                      </div>
                    </div>
                  
                 </div>
              </div>
          </div>
      </div>
  </section>
 
<%-include('footer')%>