<%-include('header')%>
<body>
    <%-include('body')%>
<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
    margin: 0;
  }

  .ec-page-content {
    padding: 60px 0;
    text-align: center;
  }

  .ec-title {
    color: #0056b3;
    margin-top: 10px;
    margin-bottom: 20px;
    font-size: 28px;
  }

  .sub-title {
    color: #777777;
    margin: 0;
    margin-bottom: 30px;
    font-size: 18px;
  }

  .ec-login-container {
    background-color: #ffffff;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  label {
    display: block;
    text-align: left;
    font-weight: bold;
    margin-bottom: 10px;
    color: #333333;
  }

  input[type="email"] {
    width: 100%;
    height: 40px;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #dddddd;
    border-radius: 5px;
    margin-bottom: 20px;
  }

  .ec-login-wrap {
    margin-bottom: 20px;
  }

  .ec-login-btn button {
    padding: 10px 30px;
    font-size: 16px;
    background-color: #0056b3;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease-in-out;
  }

  .ec-login-btn button:hover {
    background-color: #004080;
  }
</style>

<section class="ec-page-content section-space-p">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <div class="section-title">
          <h2 class="ec-bg-title">Email Verification</h2>
          <h2 class="ec-title">Email Verification</h2>
          <p class="sub-title mb-3">Please enter your email address to verify.</p>
        </div>
      </div>
      <div class="ec-login-wrapper">
        <div class="ec-login-container">
          <div class="ec-login-form">
            <form action="/verifyEmail" method="post">
              <span class="ec-login-wrap">
                <label>Email Address*</label>
                <input type="email" name="email" placeholder="Enter your email address" required />
              </span>
              <span class="ec-login-wrap ec-login-btn">
                <button class="btn btn-primary" type="submit">Verify Email</button>
              </span>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('footer') %>
