<%- include('header') %>
<body>
  <%-include('headsection')%>

<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
    margin: 0;
  }

  .otpPage {
    text-align: center;
    padding: 60px 0;
  }

  h1 {
    color: #333333;
    margin: 0;
    margin-bottom: 20px;
    font-size: 28px;
  }

  input[type="password"] {
    width: 100%;
    height: 40px;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #dddddd;
    border-radius: 5px;
    margin-bottom: 20px;
  }

  .recover {
    margin-bottom: 20px;
  }

  .recover a {
    color: #0056b3;
    text-decoration: none;
  }

  #notmatch {
    color: #ff0000;
    display: none;
  }

  #fillout2 {
    color: #ff0000;
    display: none;
  }

  .logout_alert,
  .invalid_alert {
    margin-bottom: 20px;
  }

  .logout_alert {
    color: #ff0000;
  }

  .invalid_alert {
    color: #ff0000;
  }

  button[type="submit"] {
    padding: 10px 30px;
    font-size: 16px;
    background-color: #0056b3;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease-in-out;
  }

  button[type="submit"]:hover {
    background-color: #004080;
  }
</style>

<div class="otpPage">
  <h1>Enter New Password</h1>
  <form action="/newPassword" method="post" id="newPass">
    <input style="max-width: 200px;" type="password" placeholder="Enter Password" id="password" name="password" required />
    <input style="max-width: 200px;" type="password" placeholder="Confirm Password" id="new_password" name="new_password" required />

    <div class="recover">
      <a href="/login">Remember Password?</a>
    </div>

    <p id="notmatch">Password does not match</p>
    <p id="fillout2">Please enter a valid OTP</p>

    <div class="logout_alert" role="alert"></div>
    <div class="invalid_alert" role="alert">
      <%= invalidOtp %>
    </div>
    

    <button type="submit" id="auth_button">Verify</button>
  </form>
</div>

<%- include('footer') %>
