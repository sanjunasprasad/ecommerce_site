<%-include('adminhead')%>

    <style>
        .nav-7 h2 a {
            color: black;
        }
    </style>

    <div class="container-fluid">
        <div class="row">
            <div id="user_search">
                <div class="col-lg-6">
                    <div id="catMsg">
                        <h5 id="noResultsFound">no results found!!</h5>
                    </div>
                 
                    <!-- <% if (bannerSave || bannerExist || bannerUpdate || bannerDelete) { %>
                        <div class="alert alert-dismissible alert-success banner-message" role="alert"> -->
                    <% if (bannerSave) { %>
                        <div id="catMsg">
                            <h5 style="color: #4CAF50;">
                                <%= bannerSave %>
                            </h5>
                        </div>
                        <% } else if (bannerExist) { %>
                            <div id="catMsg">
                                <h5 style="color: red;">
                                    <%= bannerExist %>
                                </h5>
                            </div>
                            <% } else if (bannerUpdate) { %>
                                <div id="catMsg">
                                    <h5 style="color: #4CAF50;">
                                        <%= bannerUpdate %>
                                    </h5>
                                </div>
                                <% } else if (bannerDelete) { %>
                                    <div id="catMsg">
                                        <h5 style="color: #4CAF50;">
                                            <%= bannerDelete %>
                                        </h5>
                                    </div>
                                    <% } %>
                <!-- </div>
                <% } %> -->

                <div class="col-lg-6">
                    <div id="search">
                        <input type="search" placeholder="Search Banners" aria-label="Search" />
                    </div>
                </div>


            </div>
        </div>
    </div>
    </div>
  

    <div class="row">
        <div class="col-lg-10 m-auto">
            <div class="table-container">
                <table class="table table-hover mt-4">
                    <thead>
                        <tr>
                            <th scope="col">NO</th>
                            <th scope="col">IMAGE</th>
                            <th scope="col">BANNER TITLE</th>
                            <th scope="col">SUBTITLE</th>
                            <th scope="col">OFFER LABEL</th>
                            <th scope="col">STATUS</th>
                            <th scope="col">ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% bannerData.forEach(function(banner, adjindex) { %>
                            <% var index=adjindex + 1; %>
                                <tr>
                                    <td scope="row">
                                        <%= index %>
                                    </td>
                                    <td><img style="width: 100px; height: 60px;" src="<%= banner.image.url %>"
                                            alt="Category Image"></td>
                                    <td style="width: 20%;">
                                        <%= banner.title %>
                                    </td>
                                    <td class="description-Cell" data-bs-toggle="tooltip" data-bs-placement="bottom"
                                        title="<%= banner.subtitle %>">
                                        <%= banner.subtitle %>
                                    </td>
                                    <td>
                                        <%= banner.label %>
                                    </td>
                                    <% if (banner.active) { %>
                                        <td>Active</td>
                                        <% } else { %>
                                            <td>Unlisted</td>
                                            <% } %>
                                                <td style="width: 200px;">
                                                    <a href="/admin/updateBanner/<%= banner.id %>"
                                                        class="btn btn-sm btn-primary">Update</a>
                                                    <% if (banner.active) { %>
                                                        <a href="/admin/bannerStatus/<%= banner.id %>"
                                                            class="btn btn-sm btn-danger">Unlist</a>
                                                        <% } else { %>
                                                            <a href="/admin/bannerStatus/<%= banner.id %>"
                                                                class="btn btn-sm btn-success">List</a>
                                                            <%} %>
                                                </td>
                                </tr>
                                <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="text-center mt-4 mb-5">
        <a href="/admin/addBanner"><button class="btn btn-primary add_user" id="addUser">Add Banner</button></a>
    </div>

    <%-include('adminfoot')%>



    <script>
        // Function to hide banner messages after a specified duration
        function hideBannerMessages() {
            const bannerMessages = document.querySelectorAll('.banner-message');
            bannerMessages.forEach(message => {
                setTimeout(() => {
                    message.style.display = 'none';
                }, 1000); // Messages will disappear after 5 seconds (5000 milliseconds)
            });
        }
    
        // Call the function to hide messages after the page is loaded
        window.addEventListener('load', hideBannerMessages);
    </script>